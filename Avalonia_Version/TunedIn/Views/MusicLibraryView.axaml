<?xml version="1.0" encoding="utf-8"?>
<UserControl
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:TunedIn.ViewModels"
    xmlns:model="using:TunedIn.Models"
    mc:Ignorable="d"
    d:DesignWidth="1200"
    d:DesignHeight="800"
    x:Class="TunedIn.Views.MusicLibraryView"
    x:DataType="vm:MusicLibraryViewModel"
    Background="#0f0f10">

    <Design.DataContext>
        <vm:MusicLibraryViewModel/>
    </Design.DataContext>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="260"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Sidebar (left) -->
        <Border Grid.Column="0" Background="#1e1e20">
            <StackPanel Margin="18" Spacing="18">
                <StackPanel>
                    <TextBlock Text="TunedIn" FontSize="20" FontWeight="SemiBold" Foreground="#ffffff"/>
                    <TextBlock Text="Your Personal Music Player" FontSize="12" Foreground="#9a9a9a" Margin="0 4 0 0"/>
                </StackPanel>

                <StackPanel Spacing="8" Margin="0 18 0 0">
                    <Border Background="#7b2bf2" CornerRadius="8" Padding="10" Width="220">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="♪" FontSize="16" Foreground="White" VerticalAlignment="Center"/>
                            <TextBlock Grid.Column="1" Text="Music Library" Margin="10 0" VerticalAlignment="Center" Foreground="White"/>
                            <Border Grid.Column="2" Background="#2a2033" CornerRadius="6" Padding="4,2" VerticalAlignment="Center" HorizontalAlignment="Right">
                                <TextBlock Text="{Binding Songs.Count}" Foreground="#cfcfff" FontSize="12"/>
                            </Border>
                        </Grid>
                    </Border>

                    <StackPanel Spacing="8" Margin="0 8 0 0">
                        <StackPanel Orientation="Horizontal" Spacing="10" VerticalAlignment="Center">
                            <TextBlock Text="≡" Foreground="#bdbdbd" VerticalAlignment="Center"/>
                            <TextBlock Text="Playlists" Foreground="#bdbdbd" VerticalAlignment="Center"/>
                            <Border Background="#2b2b2b" CornerRadius="6" Padding="4,2" Margin="8 0 0 0">
                                <TextBlock Text="{Binding Playlists.Count}" Foreground="#9b9b9b" FontSize="12"/>
                            </Border>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Spacing="10" VerticalAlignment="Center">
                            <TextBlock Text="▶" Foreground="#bdbdbd" VerticalAlignment="Center"/>
                            <TextBlock Text="Now Playing" Foreground="#bdbdbd" VerticalAlignment="Center"/>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>

                <StackPanel VerticalAlignment="Bottom" Margin="0 60 0 0">
                    <TextBlock Text="Free • No Ads • No Subscriptions" FontSize="11" Foreground="#6d6d6d"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Main area -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="120"/> <!-- increased to fit player + progress -->
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0" Background="#0f0f10" Padding="18" BorderBrush="#222226" BorderThickness="0 0 0 1">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel>
                        <TextBlock Text="Music Library" FontSize="22" FontWeight="SemiBold" Foreground="#ffffff"/>
                        <TextBlock Text="{Binding Songs.Count, StringFormat={}{0} songs in your library}" FontSize="12" Foreground="#9a9a9a" Margin="0 6 0 0"/>
                    </StackPanel>

                    <Button x:Name="ImportSongsButton" Grid.Column="1"
                            Content="Import Songs"
                            Command="{Binding ImportSongsCommand}"
                            Padding="12 6"
                            Margin="8 0 0 0"
                            Background="#0b0720"
                            Foreground="#ffffff"
                            BorderBrush="#2e2a40"
                            CornerRadius="8"/>
                </Grid>
            </Border>

            <!-- Content / Empty state -->
            <Border Grid.Row="1" Background="#0b0b0c">
                <Grid>
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="14">
                        <Border Width="80" Height="80" CornerRadius="40" Background="#262627" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <TextBlock Text="⬆" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="30" Foreground="#8a8a8a"/>
                        </Border>

                        <TextBlock Text="No songs in your library" FontSize="18" FontWeight="SemiBold" Foreground="#ffffff" HorizontalAlignment="Center"/>
                        <TextBlock Text="Import your local music files to start listening" FontSize="13" Foreground="#9a9a9a" HorizontalAlignment="Center"/>

                        <Button x:Name="ImportFirstSongButton" Content="Import Your First Song"
                                Command="{Binding ImportSongsCommand}"
                                Background="#1a0b3a"
                                Foreground="#ffffff"
                                BorderBrush="#2e2240"
                                Padding="12 8"
                                CornerRadius="8"
                                Width="200"
                                HorizontalAlignment="Center"
                                Margin="0 8 0 0"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Player bar -->
            <Border Grid.Row="2" Background="#121214" BorderBrush="#222226" BorderThickness="1 0 0 0" Padding="12">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/> <!-- controls -->
                        <RowDefinition Height="Auto"/> <!-- progress -->
                    </Grid.RowDefinitions>

                    <!-- Controls row -->
                    <Grid Grid.Row="0" Margin="0,6">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="220"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="220"/>
                        </Grid.ColumnDefinitions>

                        <!-- Left: thumbnail + current song -->
                        <StackPanel Orientation="Horizontal" Spacing="12" VerticalAlignment="Center" Grid.Column="0">
                            <Border Width="56" Height="56" CornerRadius="8" Background="#262626" HorizontalAlignment="Left" VerticalAlignment="Center">
                                <TextBlock Text="▶" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="#9a9a9a" FontSize="18"/>
                            </Border>
                            <StackPanel VerticalAlignment="Center">
                                <TextBlock Text="{Binding NowPlayingTitle}" Foreground="#ffffff" FontSize="14" FontWeight="SemiBold"/>
                                <TextBlock Text="{Binding NowPlayingSubtitle}" Foreground="#8f8f8f" FontSize="12"/>
                            </StackPanel>
                        </StackPanel>

                        <!-- Center: playback controls -->
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="18" Grid.Column="1">
                            <Button Command="{Binding ToggleRepeatCommand}" Width="36" Height="36" Background="Transparent" Foreground="#bdbdbd" BorderBrush="Transparent">⤺</Button>
                            <Button Command="{Binding PreviousCommand}" Width="36" Height="36" Background="Transparent" Foreground="#bdbdbd" BorderBrush="Transparent">⏮</Button>

                            <!-- Big circular play/pause -->
                            <Border Width="64" Height="64" CornerRadius="32" Background="#7b2bf2" VerticalAlignment="Center">
                                <Button Command="{Binding PlayPauseCommand}" Background="Transparent" BorderBrush="Transparent" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center" Width="64" Height="64">
                                    <TextBlock Text="{Binding PlayPauseIcon}" FontSize="22" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Button>
                            </Border>

                            <Button Command="{Binding NextCommand}" Width="36" Height="36" Background="Transparent" Foreground="#bdbdbd" BorderBrush="Transparent">⏭</Button>
                            <Button Width="36" Height="36" Background="Transparent" Foreground="#bdbdbd" BorderBrush="Transparent">🔁</Button>
                        </StackPanel>

                        <!-- Right: volume -->
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center" Spacing="12" Grid.Column="2">
                            <TextBlock Text="🔊" Foreground="#bdbdbd" VerticalAlignment="Center"/>
                            <Border Background="#0b0b0c" CornerRadius="12" Padding="6 4" VerticalAlignment="Center">
                                <Slider Minimum="0" Maximum="1" Value="{Binding Volume}" Width="120" Height="6" Background="#111111" />
                            </Border>
                        </StackPanel>
                    </Grid>

                    <!-- Progress row -->
                    <Grid Grid.Row="1" Margin="8 10 8 0" VerticalAlignment="Center">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Text="{Binding PositionString}" Foreground="#9a9a9a" VerticalAlignment="Center" Margin="6 0" Grid.Column="0"/>

                        <Border Grid.Column="1" VerticalAlignment="Center" Padding="0 6">
                            <Slider Minimum="0"
                                    Maximum="{Binding NowPlayingDurationTotalSeconds}"
                                    Value="{Binding PositionSeconds}"
                                    Height="8"
                                    Background="#9e9e9e"
                                    HorizontalAlignment="Stretch"/>
                        </Border>

                        <TextBlock Text="{Binding DurationString}" Foreground="#9a9a9a" VerticalAlignment="Center" Margin="6 0" Grid.Column="2"/>
                    </Grid>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</UserControl>